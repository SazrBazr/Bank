<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bank</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bank.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
</head>
<body>
    <header>
        <div class="container-fluid header-bg">
            <div class="navbar-brand div-font" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="https://firebasestorage.googleapis.com/v0/b/spacepass-b88ba.appspot.com/o/Z-Bank%20(1).png?alt=media&token=65afe804-2c58-416e-b576-f771adcff8ab" width="60" height="60" />
                Z-Bank
            </div>
        </div>
    </header>
    <div class="container mt-3 mb-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
